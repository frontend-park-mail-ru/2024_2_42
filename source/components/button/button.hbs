<div class="pin" style="width: 120px; height: 120px;">
    <img src="{{pinUrl}}" alt="Pin Image" class="pin-image" />

    <div class="dropdown-container">
        <select disabled>
            <option value="">Select a board</option>
        </select>
    </div>

    <div class="button-container">
        <div class="save-pin-container"></div> <!-- Кнопка для сохранения на доску -->
        <div class="share-pin-container"></div> <!-- Кнопка для поделиться -->
        <div class="menu-pin-container"></div>  <!-- Кнопка для раскрытия меню -->
    </div>

    {{#if showText}}
        <div class="pin-text">Your text here</div> <!-- Отображение текста под изображением -->
    {{/if}}

    {{#if userIcon}}
        <div class="user-icon">
            <img src="{{userIcon}}" alt="User Icon" />
        </div> <!-- Отображение иконки пользователя -->
    {{/if}}
</div>
