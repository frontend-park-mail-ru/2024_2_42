<div class="header">
  <!-- Icon on the left -->
  <div class="header__icon">
    <img src="{{iconUrl}}" alt="App Icon" class="header-icon" />
  </div>

  <!-- Section buttons -->
  {{#if isLoggedIn}}
  <div class="dropdown">
    <button class="dropDownButton">Menu</button>
    <div class="dropdown__content" id="dropdown__items" style="display: none;">
      {{#each buttons}}
        <a 
          href="{{this.href}}" 
          class="button {{#if this.disabled}}disabled{{/if}}" 
          {{#if this.disabled}}tabindex="-1"{{/if}}>
          {{this.name}}
        </a>
      {{/each}}
    </div>
  </div>
  {{/if}}

  <!-- Search bar -->
  <div class="header__search">
    {{{searchInput}}}
  </div>

  <!-- Notifications and Profile -->
  {{#if isLoggedIn}}
  <div class="header__profile">
    {{{notificationButton}}}
    {{{profileButton}}}
  </div>
  {{/if}}

  <!-- Login and Registration buttons -->
  {{#unless isLoggedIn}}
  <div class="header__auth">
    {{{loginButton}}}
    {{{registerButton}}}
  </div>
  {{/unless}}
</div>
